@model IEnumerable<WebApplication8.Models.WebShop.Product>


<div class="sidebar-widget outer-bottom-small wow fadeInUp">
    <h3 class="section-title">@Global["SpecialOffer"] </h3>

    <div class="sidebar-widget-body outer-top-xs">
        <div class="owl-carousel sidebar-carousel special-offer custom-carousel owl-theme outer-top-xs">
            @foreach (var m in Model)
            {

                <div class="products" style="float:left">

                    <div class="product">
                        <div class="product-image">
                            <div class="image">
                                <a href="~/Product/Detail/@m.Id/@m.Name"><img src="~/Content/img/products/images/@m.Image" alt="" style="height:150px;" class="img-responsive" id="@m.Id"></a>


                                @*<img src="~/assets/images/products/3.jpg" />*@
                            </div><!-- /.image -->

                            <div class="tag hot"><span>hot</span></div>
                        </div><!-- /.product-image -->


                        <div class="product-info text-left">
                            <h3 class="name">
                                <a href="~/Product/Detail/@m.Id">

                                    @m.Name

                                </a>

                            </h3>

                            <div class="rating rateit-small hidden"></div>
                            <div class="description"></div>

                            <div class="product-price">
                                <span class="price numeral-init">
                                    @Html.Raw(m.PriceP * (1 - m.Discount))
                                </span>
                            @if (m.Discount > 0)
                            {
                                <span class="price-before-discount numeral-init">@m.PriceP</span>
                            }   
                            </div><!-- /.product-price -->

                        </div><!-- /.product-info -->
                        <div class="cart clearfix animate-effect">
                            <div class="action">
                                <ul class="list-unstyled">
                                    <li class="add-cart-button btn-group">
                                        <button class="btn btn-primary icon addProduct" type="button" data-id="@m.Id">
                                            <i class="fa fa-shopping-cart"></i>
                                        </button>
                                        <button class="btn btn-primary addProduct hidden"  type="button" data-id="@m.Id">Thêm vào giỏ</button>
                                        <button class="btn btn-primary addProduct" type="button"
                                                data-urladdcart="@Url.RouteUrl(new {controller="Cart",action="Add" })"
                                                data-id="@m.Id" data-name="@m.Name" data-url="@m.Image" data-urlpartialcart="@Url.RouteUrl(new { controller = "Cart", action = "PartialCart" })">
                                            Thêm vào giỏ
                                        </button>
                                    </li>

                                 
                                   
                                </ul>
                            </div><!-- /.action -->
                        </div><!-- /.cart -->
                    </div><!-- /.product -->

                </div><!-- /.products -->
            }
        </div>

    </div><!-- /.sidebar-widget-body -->

</div><!-- /.sidebar-widget -->
