@model IEnumerable<WebApplication8.Models.WebShop.Product>
<!-- ============================================== SPECIAL OFFER ============================================== -->

<div class="sidebar-widget outer-bottom-small wow fadeInUp">
    <h3 class="section-title">@Global["SaleOff"]</h3>

    <div class="sidebar-widget-body outer-top-xs">
        @*<div class="owl-carousel sidebar-carousel special-offer custom-carousel owl-theme outer-top-xs">*@
        @foreach (var p in Model)
            {
            <div class="item">
                <div class="products special-product">
                    <div class="product">
                        <div class="product-micro">
                            <div class="row product-micro-row">
                                <div class="col col-xs-5">
                                    <div class="product-image">
                                        <div class="border-box">
                                            <a href="~/Content/img/products/images/@p.Image" data-lightbox="image-1" data-title="Nunc ullamcors">
                                                <img src="~/Content/img/products/images/@p.Image" alt="" class="img-responsive" id="@p.Id">
                                                <div class="zoom-overlay"></div>
                                            </a>
                                        </div><!-- /.image -->
                                        <div class="tag tag-micro sale">
                                            <span>sale</span>
                                        </div>


                                    </div><!-- /.product-image -->
                                </div><!-- /.col -->
                                <div class="col col-xs-7">
                                    <div class="product-info">
                                        <h3 class="name"><a href="~/Product/Detail/@p.Id/@p.Name">@p.Name</a></h3>
                                        <div class="rating rateit-small hidden"></div>
                                        <div class="product-price">
                                            <span class="price numeral-init">
                                                @Html.Raw(p.PriceP * (1 - p.Discount))
                                            </span>
                                            @if (p.Discount > 0)
                                            {
                                                <span class="price-before-discount numeral-init">@p.PriceP</span>

                                            }
                                        </div><!-- /.product-price -->
                                        <div class="action"><a href="javascript:void(0);" data-urlpartialcart="@Url.RouteUrl(new { controller = "Cart", action = "PartialCart" })"
                                                                data-urladdcart="@Url.RouteUrl(new {controller="Cart",action="Add" })" class="lnk btn btn-primary addProduct"
                                                                data-id="@p.Id" data-name="@p.Name">Thêm vào giỏ</a></div>
                                    </div>
                                </div><!-- /.col -->
                            </div><!-- /.product-micro-row -->
                        </div><!-- /.product-micro -->

                    </div> <!--end of product-->


                </div>
            </div>
        }
        @*</div>*@

    </div><!-- /.sidebar-widget-body -->

</div><!-- /.sidebar-widget -->
<!-- ============================================== SPECIAL OFFER : END ============================================== -->
