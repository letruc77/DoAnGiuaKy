@using WebApplication8.Models.WebShop;
@*@using WebShop.I18N*@
@model IEnumerable<Category> 


<!-- ============================================== SIDEBAR ============================================== -->

@*<div class="col-xs-12 col-sm-12 col-md-3 sidebar">*@



    <!-- ================================== TOP NAVIGATION ================================== -->

    <div class="side-menu animate-dropdown outer-bottom-xs">
        <div class="head"><i class="icon fa fa-align-justify fa-fw"></i>@*@Global.Categories*@Categories</div>
        @foreach (var item in Model)
        {



        <nav class="yamm megamenu-horizontal" role="navigation">
            <ul class="nav">
                <li class="dropdown menu-item">
                    
                @{
                        // var Language = System.Threading.Thread.CurrentThread.CurrentCulture.DisplayName;
                        var Language = "English";
                        switch (Language)
                        {
                            case "English":
                    <a href="~/Product/Cat/@item.Id/@item.Name"><i class="icon @item.Icon"></i>@item.Name</a>
                        break;
                  default:
                    <a href="~/Product/Cat/@item.Id/@item.NameVN"><i class="icon @item.Icon"></i>@item.NameVN</a>
                        break;

                    }
                    }    
                </li><!-- /.menu-item -->

            
            </ul><!-- /.nav -->
        </nav><!-- /.megamenu-horizontal -->
        }
    </div><!-- /.side-menu -->

  
    <!-- ============================================== COLOR: END ============================================== -->


@*</div>*@<!-- /.sidemenu-holder -->
<!-- ============================================== SIDEBAR : END ============================================== -->