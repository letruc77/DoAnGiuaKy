@model WebApplication8.Models.WebShop.Product
@{
    ViewBag.Title = "Detail";
}

<div class="row">
    <div class="col-md-12 product">
        <div class="col-xs-12 col-sm-6 col-md-5 gallery-holder">
            <img class="img-responsive" alt="" src="~/Content/img/products/images/@Model.Image" id="@Model.Id">


        </div>
        <div class="col-sm-6 col-md-7 product-info-block">
            <div class="single-product">
                <div class="product-info">
                    <h1 class="name">@Model.Name</h1>

                    <div class="rating-reviews m-t-20">
                        <div class="row">
                            <div class="col-sm-3 hidden">
                                <div class="rating rateit-small rateit"><button id="rateit-reset-5" data-role="none" class="rateit-reset" aria-label="reset rating" aria-controls="rateit-range-5" style=""></button>
                                <div id="rateit-range-5" class="rateit-range" tabindex="0" role="slider" aria-label="rating" aria-owns="rateit-reset-5" aria-valuemin="0" aria-valuemax="5" aria-valuenow="0" aria-readonly="false" style="width: 80px; height: 16px;"><div class="rateit-selected" style="height: 16px; width: 0px; display: block;"></div>
                                    <div class="rateit-hover" style="height: 16px; width: 0px; display: none;"></div></div><button id="rateit-reset-5" data-role="none" class="rateit-reset" aria-label="reset rating" aria-controls="rateit-range-5"></button><div id="rateit-range-5" class="rateit-range" tabindex="0" role="slider" aria-label="rating" aria-owns="rateit-reset-5" aria-valuemin="0" aria-valuemax="5" aria-valuenow="0" aria-readonly="false" style="width: 80px; height: 16px;"><div class="rateit-selected" style="height: 16px; width: 0px; display: block;"></div><div class="rateit-hover" style="height: 16px; width: 0px; display: none;"></div></div></div>
                            </div>
                            <div class="col-sm-8">
                                <div class="reviews">
                                    <a href="#" class="lnk">(@Model.Views Reviews)</a>
                                </div>
                            </div>
                        </div><!-- /.row -->
                    </div><!-- /.rating-reviews -->

                    <div class="stock-container info-container m-t-10">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="stock-box">
                                    <span class="label">@Global["Availability"]:</span>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <div class="stock-box">
                                    @if (@Model.Available == true)
                                    {
                                        <span class="text-bold">
                                        @Global["Instock"]
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">
                                      @Global["NotInStock"]
                                        </span>
                                    }

                                </div>
                            </div>
                        </div><!-- /.row -->
                    </div><!-- /.stock-container -->

                    <div class="description-container m-t-20">
                      @Html.Raw(@Model.Description)
                    </div><!-- /.description-container -->

                    <div class="price-container info-container m-t-20">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="price-box">
                                    <span class="price numeral-init">@*@Html.FormatValue(ViewBag.PriceOff, "{0:c}")*@@((double)ViewBag.PriceOff)</span>
                                   @if ((double)ViewBag.PriceOff != Model.PriceP)
                                   {
                                    <span class="price-strike numeral-init">@*@Html.FormatValue(Model.UnitPrice, "{0:c}")*@@Model.PriceP</span>
                                   }
                                      </div>
                            </div>
                        </div><!-- /.row -->
                    </div><!-- /.price-container -->

                    <div class="quantity-container info-container">
                        <div class="row">
                            <div class="col-sm-2">
                                <span class="label">@Global["Quanity"] :</span>
                            </div>
                            <div class="col-sm-2">
                                <div class="cart-quantity">
                                    <div class="quant-input">
                                        <div class="arrows">
                                            <div class="arrow plus gradient"><span class="ir"><i class="icon fa fa-sort-asc"></i></span></div>
                                            <div class="arrow minus gradient"><span class="ir"><i class="icon fa fa-sort-desc"></i></span></div>
                                        </div>

                                        <input type="text" value="1" name="soluong" id="soluong">

                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-7">
                                <a href="#" class="btn btn-primary addProduct" data-id="@Model.Id"  data-urladdcart="@Url.RouteUrl(new {controller="Cart",action="Add" })"
                                                 data-name="@Model.Name" data-url="@Model.Image" data-urlpartialcart="@Url.RouteUrl(new { controller = "Cart", action = "PartialCart" })"><i class="fa fa-shopping-cart inner-right-vs"></i> Thêm vào giỏ</a>
                            </div>


                        </div><!-- /.row -->
                    </div><!-- /.quantity-container -->

                    <div class="product-social-link m-t-20 text-right">
                        <span class="social-label">Chia sẻ :</span>
                        <div class="social-icons">
                            <ul class="list-inline">
                                <li><a class="fa fa-facebook" href="#"></a></li>
                                <li><a class="fa fa-twitter" href="#"></a></li>
                                <li><a class="fa fa-linkedin" href="#"></a></li>
                                <li><a class="fa fa-rss" href="#"></a></li>
                                <li><a class="fa fa-pinterest" href="#"></a></li>
                            </ul><!-- /.social-icons -->
                        </div>
                    </div>




                </div><!-- /.product-info -->
            </div> <!--Single Product-->
        </div>

        <div class="single-product outer-bottom-sm">
           
         
            <div class="product-tabs inner-bottom-xs">
                <div class="row">
                    <div class="col-sm-3">
                        <ul id="product-tabs" class="nav nav-tabs nav-tab-cell">
                            <li class="active"><a data-toggle="tab" href="#description">MÔ TẢ</a></li>
                            <li class="hidden"><a data-toggle="tab" href="#review">REVIEW</a></li>
                            <li class="hidden"><a data-toggle="tab" href="#tags">TAGS</a></li>
                        </ul><!-- /.nav-tabs #product-tabs -->
                    </div>
                    <div class="col-sm-9">

                        <div class="tab-content">

                            <div id="description" class="tab-pane in active">
                                <div class="product-tab">
                                    <p class="text">
                                        @Html.Raw(@Model.Description)
                                    </p>
                                </div>
                            </div><!-- /.tab-pane -->

                        </div><!-- /.tab-content -->

                    </div><!-- /.col -->
                </div>

            </div>
        </div>


    </div>
 </div>
<div class="row">

    <section class="section featured-product wow fadeInUp">
        <h3 class="section-title"> SẢN PHẨM ĐÃ XEM</h3>

        @foreach (WebApplication8.Models.WebShop.Product m in ViewBag.Views)
        {

            var tukhoa = ViewBag.tukhoa;
            <div class="products" style="float:left">

                <div class="product">
                    <div class="product-image">
                        <div class="image">
                            <a href="~/Product/Detail/@m.Id/@m.Name.ToAscii()"><img src="~/Content/img/products/images/@m.Image"  alt="" style="height:70px" class="img-responsive" id="@m.Id"></a>


                            @*<img src="~/assets/images/products/3.jpg" />*@
                        </div><!-- /.image -->

                        <div class="tag sale"><span>sale</span></div>
                    </div><!-- /.product-image -->


                    <div class="product-info text-left">
                        <h3 class="name">
                            <a href="~/Product/Detail/@m.Id"> @m.Name;  </a>

                        </h3>

                        <div class="rating rateit-small"></div>
                        <div class="description"></div>

                        <div class="product-price">
                            <span class="price">
                                @Html.FormatValue(m.PriceP * (1 - m.Discount), "{0:N}")

                            </span>
                            <span class="price-before-discount"> @Html.FormatValue(m.PriceP, "{0:N}") </span>

                        </div><!-- /.product-price -->

                    </div><!-- /.product-info -->
                    <div class="cart clearfix animate-effect">
                        <div class="action">
                            <ul class="list-unstyled">
                                <li class="add-cart-button btn-group">
                                    <button class="btn btn-primary icon addProduct" type="button" data-id="@m.Id">
                                        <i class="fa fa-shopping-cart"></i>
                                    </button>
                                    <button class="btn btn-primary addProduct" type="button" data-id="@m.Id">Thêm vào giỏ</button>
                                </li>
                            </ul>
                        </div><!-- /.action -->
                    </div><!-- /.cart -->
                </div><!-- /.product -->

            </div><!-- /.products -->

        }










    </section><!-- /.section -->
</div>