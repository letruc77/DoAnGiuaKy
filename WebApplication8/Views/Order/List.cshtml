@model IEnumerable<WebApplication8.Models.WebShop.Order>
@{
    ViewBag.Title = "List";
}

<h2>Order List</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>Id</th>
        <th>Người mua</th>
        <th>Ngày Order</th>
        <th>Giá trị</th>
        <th></th>
    </tr>
    @foreach (var o in Model)
    {
        <tr>
            <td>@o.Id</td>
            <td>@o.Receiver</td>
            <td>@o.OrderDate</td>
            <td>@o.Amount</td>
            <td>
                <a href="/Order/Detail/@o.Id">Detail</a>
            </td>
        </tr>
    }
</table>